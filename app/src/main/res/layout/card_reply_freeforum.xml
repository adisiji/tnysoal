<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <custom_font.EditTextMyriad
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/grey_box_stroke"
        android:id="@+id/ed_child_reply"
        android:text="Isi reply"
        android:padding="5dp"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown_reply_forum"
        android:layout_alignBaseline="@+id/ed_child_reply"
        android:layout_alignBottom="@+id/ed_child_reply"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/soft_blue_hx"/>

</RelativeLayout>