<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_login"
    tools:context="nb.scode.tanyasoal.ChatroomTutorActivity">

    <RelativeLayout
        android:id="@+id/activity_chatroom_tanya_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <custom_font.TextViewMyriad
            android:id="@+id/header1_chatroom_tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jml_soal_ditanya_pengguna"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"/>

        <custom_font.TextViewMyriad
            android:id="@+id/header2_chatroom_tutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jml_soal_sudah_dijawab"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/header1_chatroom_tutor"/>

        <View
            android:id="@+id/bg_white_mainsoal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/white_box_stroke"
            android:layout_below="@+id/header2_chatroom_tutor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/img_main_soal_chat"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignTop="@+id/bg_white_mainsoal"
            android:layout_alignLeft="@+id/bg_white_mainsoal"
            android:layout_alignStart="@+id/bg_white_mainsoal"
            android:layout_margin="12dp"
            />

        <custom_font.TextViewMyriad
            android:id="@+id/jwb_dengan_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_jawab_dengan"
            android:layout_below="@id/img_main_soal_chat"
            android:layout_alignLeft="@+id/img_main_soal_chat"
            android:layout_alignStart="@+id/img_main_soal_chat"
            />

        <custom_font.TextViewMyriad
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_sma3"
            android:layout_below="@id/jwb_dengan_chat"
            android:layout_alignLeft="@+id/img_main_soal_chat"
            android:layout_alignStart="@+id/img_main_soal_chat"/>

        <custom_font.TextViewMyriad
            android:id="@+id/btn_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pass"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/prim_red"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/bg_white_mainsoal"
            android:layout_alignRight="@+id/img_main_soal_chat"
            android:layout_alignEnd="@+id/img_main_soal_chat" />

        <custom_font.TextViewMyriad
            android:id="@+id/btn_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/prim_red"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/bg_white_mainsoal"
            android:layout_toLeftOf="@id/btn_pass"
            android:layout_toStartOf="@id/btn_pass"/>

        <View
            android:id="@+id/view_jawaban1"
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:layout_below="@+id/bg_white_mainsoal"
            android:layout_alignRight="@+id/bg_white_mainsoal"
            android:layout_alignEnd="@+id/bg_white_mainsoal"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_box_stroke"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_below="@+id/bg_white_mainsoal"
            android:layout_alignRight="@+id/bg_white_mainsoal"
            android:layout_alignTop="@id/view_jawaban1"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/img_jawaban1" />

        <custom_font.TextViewMyriad
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_jawaban1"
            android:text="@string/berikut_jawab"
            android:layout_alignLeft="@id/view_jawaban1"
            android:layout_alignStart="@id/view_jawaban1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

        <custom_font.TextViewMyriad
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_jawaban1"
            android:text="@string/xyz_6jam_lalu"
            android:layout_alignLeft="@id/img_jawaban1"
            android:layout_alignStart="@id/img_jawaban1"
            android:layout_marginTop="5dp"
            android:textSize="10sp"/>

        <View
            android:id="@+id/view_jawaban2"
            android:layout_width="190dp"
            android:layout_height="125dp"
            android:layout_below="@+id/view_jawaban1"
            android:layout_alignRight="@+id/bg_white_mainsoal"
            android:layout_alignEnd="@+id/bg_white_mainsoal"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_box_stroke"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/img_jawaban1"
            android:layout_alignTop="@id/view_jawaban2"
            android:layout_alignLeft="@+id/img_jawaban1"
            android:layout_alignStart="@+id/img_jawaban1"
            android:id="@+id/img_jawaban2" />

        <custom_font.TextViewMyriad
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_jawaban2"
            android:text="@string/berikut_jawab"
            android:layout_alignLeft="@id/view_jawaban2"
            android:layout_alignStart="@id/view_jawaban2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

        <custom_font.TextViewMyriad
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_jawaban2"
            android:text="@string/xyz_6jam_lalu"
            android:layout_alignLeft="@id/img_jawaban2"
            android:layout_alignStart="@id/img_jawaban2"
            android:layout_marginTop="5dp"
            android:textSize="10sp"/>

        <custom_font.EditTextMyriad
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_below="@id/view_jawaban2"
            android:background="@drawable/white_box_grey_stroke"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:hint="@string/ketik_sini"
            android:gravity="top"
            android:id="@+id/editTextMyriad" />

        <custom_font.TextViewMyriad
            android:id="@+id/btn_choose_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_file"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/grey_box_stroke"
            android:layout_below="@id/editTextMyriad"
            android:layout_alignLeft="@id/editTextMyriad"
            android:layout_alignStart="@id/editTextMyriad"/>

        <CheckBox
            android:text="@string/selesai_jwb_soal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextMyriad"
            android:layout_toRightOf="@+id/btn_choose_file"
            android:layout_toEndOf="@+id/btn_choose_file"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/cek_selesai_jawab_soal" />

        <custom_font.TextViewMyriad
            android:id="@+id/tv_jml_soal_jawab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah_soal_jawab"
            android:layout_alignLeft="@id/cek_selesai_jawab_soal"
            android:layout_alignStart="@id/cek_selesai_jawab_soal"
            android:layout_marginLeft="32dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/cek_selesai_jawab_soal"/>

        <custom_font.EditTextMyriad
            android:id="@+id/ed_soal_terjawab"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/white_box_grey_stroke"
            android:layout_toRightOf="@id/tv_jml_soal_jawab"
            android:layout_below="@id/cek_selesai_jawab_soal"
            />

        <CheckBox
            android:id="@+id/cek_soal_tersisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/soal_tersisa"
            android:layout_toRightOf="@+id/btn_choose_file"
            android:layout_toEndOf="@+id/btn_choose_file"
            android:layout_below="@id/tv_jml_soal_jawab"/>

        <custom_font.TextViewMyriad
            android:id="@+id/btn_tny_soal_baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kirim"
            android:layout_below="@id/cek_soal_tersisa"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:background="@color/prim_red"
            android:textColor="@android:color/white"/>


        <include
            android:id="@+id/btm_lay_tanya"
            layout="@layout/rbtn_subjek_red"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/btn_tny_soal_baru"/>

    </RelativeLayout>

</ScrollView>
