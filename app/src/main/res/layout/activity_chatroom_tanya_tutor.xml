<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_login"
    tools:context="nb.scode.tanyasoal.ChatroomTanyaTutorActivity">

<RelativeLayout
    android:id="@+id/activity_chatroom_tanya_tutor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/btn_tanya_tutor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <custom_font.TextViewMyriad
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanya Tutor"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_transp"/>
    </FrameLayout>

    <View
        android:id="@+id/bg_white_mainsoal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/white_box_stroke"
        android:layout_below="@+id/btn_tanya_tutor"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/img_main_soal_chat"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/bg_white_mainsoal"
        android:layout_alignLeft="@+id/bg_white_mainsoal"
        android:layout_alignStart="@+id/bg_white_mainsoal"
        android:layout_margin="12dp"
        />

    <custom_font.TextViewMyriad
        android:id="@+id/jwb_dengan_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_jawab_dengan"
        android:layout_below="@id/img_main_soal_chat"
        android:layout_alignLeft="@+id/img_main_soal_chat"
        android:layout_alignStart="@+id/img_main_soal_chat"
         />

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_sma3"
        android:layout_below="@id/jwb_dengan_chat"
        android:layout_alignLeft="@+id/img_main_soal_chat"
        android:layout_alignStart="@+id/img_main_soal_chat"/>

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:layout_margin="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:background="@color/soft_blue_hx"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/bg_white_mainsoal"
        android:layout_alignRight="@+id/img_main_soal_chat"
        android:layout_alignEnd="@+id/img_main_soal_chat" />

    <View
        android:id="@+id/view_jawaban1"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:layout_below="@+id/bg_white_mainsoal"
        android:layout_alignRight="@+id/bg_white_mainsoal"
        android:layout_alignEnd="@+id/bg_white_mainsoal"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_box_stroke"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@+id/bg_white_mainsoal"
        android:layout_alignRight="@+id/bg_white_mainsoal"
        android:layout_alignTop="@id/view_jawaban1"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/img_jawaban1" />

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_jawaban1"
        android:text="@string/berikut_jawab"
        android:layout_alignLeft="@id/view_jawaban1"
        android:layout_alignStart="@id/view_jawaban1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"/>

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_jawaban1"
        android:text="@string/xyz_6jam_lalu"
        android:layout_alignLeft="@id/img_jawaban1"
        android:layout_alignStart="@id/img_jawaban1"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <View
        android:id="@+id/view_jawaban2"
        android:layout_width="190dp"
        android:layout_height="125dp"
        android:layout_below="@+id/view_jawaban1"
        android:layout_alignRight="@+id/bg_white_mainsoal"
        android:layout_alignEnd="@+id/bg_white_mainsoal"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_box_stroke"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img_jawaban1"
        android:layout_alignTop="@id/view_jawaban2"
        android:layout_alignLeft="@+id/img_jawaban1"
        android:layout_alignStart="@+id/img_jawaban1"
        android:id="@+id/img_jawaban2" />

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_jawaban2"
        android:text="@string/berikut_jawab"
        android:layout_alignLeft="@id/view_jawaban2"
        android:layout_alignStart="@id/view_jawaban2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"/>

    <custom_font.TextViewMyriad
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_jawaban2"
        android:text="@string/xyz_6jam_lalu"
        android:layout_alignLeft="@id/img_jawaban2"
        android:layout_alignStart="@id/img_jawaban2"
        android:layout_marginTop="5dp"
        android:textSize="10sp"/>

    <custom_font.EditTextMyriad
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/view_jawaban2"
        android:background="@drawable/white_box_grey_stroke"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="@string/ketik_sini"
        android:gravity="top"
        android:id="@+id/editTextMyriad" />

    <custom_font.TextViewMyriad
        android:id="@+id/btn_tny_soal_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kirim"
        android:layout_below="@id/editTextMyriad"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:background="@color/prim_red"
        android:textColor="@android:color/white"/>

    <View
        android:id="@+id/bg_rating_chat"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/btn_tny_soal_baru"
        android:background="@drawable/white_box_stroke"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <custom_font.TextViewMyriad
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_alignTop="@+id/bg_rating_chat"
        android:layout_alignLeft="@+id/bg_rating_chat"
        android:layout_alignStart="@+id/bg_rating_chat"
        android:textColor="@android:color/black"
        android:id="@+id/textView" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_alignTop="@+id/bg_rating_chat"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="7dp"
        android:rating="4"
        android:id="@+id/ratingBar" />

    <include
        android:id="@+id/btm_lay_tanya"
        layout="@layout/rbtn_subjek_red"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ratingBar"/>

</RelativeLayout>

</ScrollView>
